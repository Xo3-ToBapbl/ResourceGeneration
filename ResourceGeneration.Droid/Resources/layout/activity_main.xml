<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/SmokeWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:text="@string/ExampleText"
        android:contentDescription="@string/TitleTextViewId"
        android:textColor="@color/DarkViolet"
        android:textSize="@dimen/CommonTextSize"
        android:layout_above="@+id/LoginButton"/>
    <Button
        android:layout_width="@dimen/LoginButtonWidth"
        android:layout_height="@dimen/LoginButtonHeight"
        android:id="@+id/LoginButton"
        android:contentDescription="@string/LoginButtonId"
        android:background="@color/LightAzure"
        android:text="@string/LoginButtonTitle"
        android:capitalize="none"
        android:textSize="@dimen/MicroTextSize"
        android:layout_centerInParent="true"/>
</RelativeLayout>